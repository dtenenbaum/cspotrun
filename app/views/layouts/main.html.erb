


<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<%= stylesheet_link_tag "style" %>
<%= javascript_include_tag "jquery-1.3.2.min" %>
<%= javascript_include_tag "cspotrun" %>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title><%= @page_title || "CSpotRun"%></title>
</head>

<body>
<div id="container">
<!-- header -->
<div id="header">

<div id="logo"><a href="#">CSpotRun</a></div>

<div id="slogan">Launching monkeys into the clouds</div>

</div>
<!--end header -->
<!-- main -->
<div id="sidebar">






<div class="sidebar_top"></div>
<div class="sidebar_main">
<% if session[:user].nil? %>
  Not logged in.
<% else %>
  Welcome <%= session[:user]%>
<% end %>
</div>
<div class="sidebar_bottom"></div>




<div class="sidebar_top"></div>
<div class="sidebar_main">
<h3>Links</h3>




<ul>
<% if session[:user].nil? %>
  <li><%= link_to "Login", :action  => "login"%></li>
<% end %>
<li><%= link_to "New Job", :action => "new_job"%></li>
<li><%= link_to "My Jobs", :action => "my_jobs"%></li>
<li><%= link_to "All Jobs", :action => "all_jobs"%></li>
<li><a target="aws_console" href="https://console.aws.amazon.com/ec2/home">AWS Console</a></li></ul>
<% unless session[:user].nil? %>
  <li><%= link_to "Log Out", :action  => "logout"%></li>
<% end %>
</div>
<div class="sidebar_bottom"></div>



</div>

<div id="text">
<div id="text_top"></div>

<div id="text_main">
<p><font color="red"><%= flash[:notice] %></font></p>

<%= yield %>
</div>

<div id="text_bottom"></div>
</div>
<!-- end main -->
<!-- footer -->
<div id="footer">
&copy; 2010 Institute for Systems Biology &nbsp;|&nbsp; <a target="isb" href="http://www.systemsbiology.net">Home</a> &nbsp;<br/>

</div>
<!-- end footer -->
</div>
</body>
</html>